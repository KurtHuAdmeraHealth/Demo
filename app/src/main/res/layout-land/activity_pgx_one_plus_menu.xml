<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrew.demo.PGxOnePlusMenu"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="73dp">

    <!--located in the horizontal center of the screen so buttons can take 50% of the screen-->
    <View
        android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnPortablePatientTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCurrentDrugInteractions"
        android:layout_alignEnd="@id/strut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/strut"
        android:layout_margin="2dp"
        android:text="@string/portable_patient_table" />

    <Button
        android:id="@+id/btnCurrentDrugInteractions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/strut"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/strut"
        android:text="@string/current_drug_interactions" />

    <Button
        android:id="@+id/btnCurrentMedicationInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGenotypeAndPhenotypeResults"
        android:layout_alignLeft="@id/strut"
        android:layout_margin="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@id/strut"
        android:text="@string/current_medication_information" />

    <Button
        android:id="@+id/btnGenotypeAndPhenotypeResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/strut"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@id/strut"
        android:text="@string/genotype_and_phenotype_results" />

    <Button
        android:id="@+id/btnPatientSpecificDrugInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCurrentMedicationInformation"
        android:layout_alignLeft="@id/strut"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@id/strut"
        android:layout_margin="2dp"
        android:text="@string/patient_specific_drug_information" />

    <Button
        android:id="@+id/btnViewFullReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPortablePatientTable"
        android:layout_alignEnd="@id/strut"
        android:layout_margin="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/strut"
        android:text="@string/view_full_report" />

    <ImageView
        android:id="@+id/ivPGxOnePlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnViewFullReport"
        android:layout_alignStart="@+id/btnViewFullReport"
        android:layout_below="@+id/strut"
        app:srcCompat="@mipmap/pgxone_plus_logo_final"
        android:layout_above="@+id/btnPatientSpecificDrugInformation" />

</RelativeLayout>
