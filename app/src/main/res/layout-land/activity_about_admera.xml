<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrew.demo.AboutAdmeraActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="318dp"
        android:layout_height="145dp"
        android:text="        Admera Health is an advanced molecular diagnostics company focused on personalized medicine and non-invasive cancer testing. We are committed to improving the health and well-being of our global community."
        android:textColor="@color/colorDarkGrey"
        android:textSize="18sp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="289dp"
        android:layout_height="0dp"
        android:gravity="center_vertical|fill_horizontal"
        android:text="About Admera Health"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="157dp"
        app:srcCompat="@mipmap/admera_logo_thin"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/txtlearnmorelink"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:text="Learn More >"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>
